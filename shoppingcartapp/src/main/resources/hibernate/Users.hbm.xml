<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.shopping.entity.Users" table="user">
		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="identity" />
		</id>
		<property name="user_name" type="string">
			<column name="user_name"  length="60" />
		</property>
		<property name="password" type="string">
			<column name="password" length="60" />
		</property>
		<property name="first_name" type="string">
			<column name="first_name" length="60" />
		</property>
		<property name="last_name" type="string">
			<column name="last_name" length="60" />
		</property>
		<property name="email" type="string">
			<column name="email" length="60" />
		</property>
		<property name="country" type="string">
			<column name="country" length="60" />
		</property>
		<property name="zip" type="string">
			<column name="zip" length="60" />
		</property>
		<property name="state" type="string">
			<column name="state" length="60" />
		</property>
		<property name="city" type="string">
			<column name="city" length="60" />
		</property>
		<property name="address" type="string">
			<column name="address" length="60" />
		</property>
		<property name="phone" type="string">
			<column name="phone" length="60" />
		</property>
		<property name="fax" type="java.lang.Integer">
			<column name="fax" length="60" />
		</property>


	</class>
</hibernate-mapping>